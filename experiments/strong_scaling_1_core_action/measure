#! /usr/bin/env python

import numpy as np

from fireperf import experiments


MESH_SIZES = np.logspace(2, 11, 10, base=2, dtype=np.int)


args = experiments.parse_args()
experiments.do_warm_start(False, use_action=True)

for mesh_size in MESH_SIZES:
    experiments.do_experiment(mesh_size=mesh_size, cwd=args.output_dir, use_action=True)